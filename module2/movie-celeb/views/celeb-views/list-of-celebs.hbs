<h2>Celebrities Index Page</h2>

<div>

{{#each listOfCelebs}}

<a href="/celebrities/details/{{this._id}}">
<h3>
{{this.name}}
</h3>
</a>

{{#if this.owned}}

<a href="/celebrities/edit/{{this._id}}">Edit This Celebrity</a>
<form action="/celebrities/{{this._id}}/destroy" method="POST">
    <button>Delete Celeb</button>
</form>

{{/if}}


{{/each}}


</div>